[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
	commit = true

[user]
	name = {{ git_user_name }}
	email = {{ git_user_email }}

[credential]
	helper = cache

[push]
	default = simple
	followTags = true
	autoSetupRemote = true

[core]
	pager = less -F

[merge "ours"]
	driver = true

[pull]
	rebase = false

[init]
	defaultBranch = main
