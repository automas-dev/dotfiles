#font pango:ttf-inconsolata 8
font pango:monospace 10


#  _                      _      ___ _         _ _              
# | |   __ _ _  _ _ _  __| |_   | _ |_)_ _  __| (_)_ _  __ _ ___
# | |__/ _` | || | ' \/ _| ' \  | _ \ | ' \/ _` | | ' \/ _` (_-<
# |____\__,_|\_,_|_||_\__|_||_| |___/_|_||_\__,_|_|_||_\__, /__/
