# App Launcher
set $mode_launcher Launch: [f]irefox [h]top [r]anger [c]angewall
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
	bindsym f exec firefox; mode "default"
	bindsym h exec $term -e htop; mode "default"
	bindsym r exec $term -e ranger; mode "default"
	bindsym c exec --no-startup-id changewall; mode "default"

	bindsym Escape mode "default"
	bindsym Return mode "default"
}

# Screen Brightness
set $brightness_launcher Launch: [1]0% [2]10% [3]25% [4]50% [5]100%
bindsym $mod+Shift+b mode "$brightness_launcher"

mode "$brightness_launcher" {
	bindsym 1 exec --no-startup-id xbacklight -set 0%; mode "default"
	bindsym 2 exec --no-startup-id xbacklight -set 10%; mode "default"
	bindsym 3 exec --no-startup-id xbacklight -set 25%; mode "default"
	bindsym 4 exec --no-startup-id xbacklight -set 50%; mode "default"
	bindsym 5 exec --no-startup-id xbacklight -set 100%; mode "default"

	bindsym Escape mode "default"
	bindsym Return mode "default"
}

# Mute / Unmute
set $audio_launcher Launch: [M]ute [U]nmute [T]oggle
bindsym $mod+Shift+m mode "$audio_launcher"

mode "$audio_launcher" {
	bindsym m exec --no-startup-id amixer set Master mute; mode "default"
	bindsym u exec --no-startup-id amixer set Master unmute; mode "default"
	bindsym t exec --no-startup-id amixer set Master toggle; mode "default"

	bindsym Escape mode "default"
	bindsym Return mode "default"
}


