{
    "python.jediEnabled": false,
    "snippets.userSnippetsDirectory": "~/.config/nvim/snips",
    "coc.preferences.colorSupport": true,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "args": [
                "--log-file=/tmp/ccls.log",
                "-v=1"
            ],
            "filetypes": [
                "c",
                "cc",
                "c++",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "client": {
                    "snippetSupport": true
                },
                "index": {
                    "onChange": true
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        }
    }
}
